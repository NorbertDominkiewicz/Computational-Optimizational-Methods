<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root" alignment="CENTER" styleClass="entry-container" stylesheets="@../../styles/components/entry.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ndominkiewicz.frontend.controller.component.EntryController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <FlowPane alignment="CENTER" orientation="VERTICAL" vgap="10.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
         <children>
            <Label styleClass="entry-label" text="Przykład:" />
            <TextField fx:id="equationField" styleClass="entry-input" />
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER" orientation="VERTICAL" vgap="10.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
         <children>
            <Label alignment="CENTER" styleClass="entry-label" text="Dokładność (e)" />
            <TextField fx:id="epsilonField" styleClass="entry-input" />
         </children>
      </FlowPane>
      <GridPane GridPane.rowIndex="2">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <FlowPane alignment="CENTER" hgap="10.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label styleClass="entry-label" text="a =" />
                  <TextField fx:id="aField" prefHeight="41.0" prefWidth="51.0" styleClass="entry-input" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" hgap="10.0" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <Label styleClass="entry-label" text="b =" />
                  <TextField fx:id="bField" prefHeight="41.0" prefWidth="51.0" styleClass="entry-input" />
               </children>
            </FlowPane>
         </children>
      </GridPane>
      <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3">
         <children>
            <Button fx:id="runButton" alignment="CENTER" mnemonicParsing="false" styleClass="run-btn" text="Run" />
         </children>
      </FlowPane>
   </children>
</GridPane>
